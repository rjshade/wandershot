.post
  .row.clutter
    .span12
      = render 'controls'
  .row.clutter
    .span12
  .row
    .span4
      = render partial: 'title', locals: { post: @post, story: @post.story }
      .body
        .text
          = md @post.text

      .navigation.minor-clutter
        = render 'navigation'

    .span8.main-image.attach
      -if @post.image?
        .center
          = link_to (image_tag @post.image.url(:large)),
                    @post.image.url(:original),
                    class: 'lightbox'
      -else
        - if (@post.user == current_user)
          .placeholder.minor-clutter
            .center
              = link_to 'Add a photo', edit_story_post_path(@story,@post)

  .row.minor-clutter
    .span4
      = render :partial => 'comments/display_all_with_form', :locals => { :type => :post }
