.story
  .row
    .span12
      = render 'controls'
  .row
    .span12
      = render partial: 'title', locals: { story: @story }
  .row
    .span6
      = md @story.summary
      .post-teasers
        - if @posts.empty?
          .post-placeholder
            .center
              %p
                = link_to 'Add a post to this story', new_story_post_path( @story ),
                          :class => 'btn btn-large btn-primary',
                          :id => 'new-post'
        - else
          - @posts.each do |post|
            = render partial: 'posts/teaser', locals: { post: post }
            %hr.soften
    .span6.attach.small-map
      = render partial: 'stories/map', locals: { small: true }
  .row
    .span6
      = render partial: 'comments/display_all_with_form', locals: { type: :story }

