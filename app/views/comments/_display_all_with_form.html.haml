.comments
  .new-comment-form
    - if current_user
      = form_for Comment.new, :html => {:'data-type' => 'html', :style => 'margin-bottom: 0px'}, :remote => true do |f|
        = f.text_area :text, :style => "width: 100%; height: 100px", :placeholder => "Comment on this #{type.to_s}..."
        = hidden_field :type, :id
        = f.button :submit, :class => 'btn btn-mini'
    - else
      = link_to 'Sign up', new_user_registration_path
      or
      = link_to 'login', new_user_session_path
      to post a comment

  #comment-block
    - if @comments
      - @comments.each do |c|
        = render :partial => 'comments/show', :locals => { :comment => c }
