.page-header
  %h2 Create a #{wandershot_text} account

= simple_form_for(@user) do |f|
  = devise_error_messages!
  = f.input :name
  = f.input :email
  = f.input :password
  = f.input :password_confirmation

  .form-actions
    = f.button :submit, "Create account", :class => 'btn btn-primary'
    or
    = link_to 'cancel', :back

= render "links"
