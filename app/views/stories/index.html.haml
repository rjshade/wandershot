.row
  .span12
    .page-header
      %h1= "latest ".html_safe + wandershot_text + " stories"

    .controls
      - if current_user
        = link_to 'New story', new_story_path, :class => 'btn btn-large btn-primary'

- @stories.each do |story|
  = render :partial => 'stories/teaser', :locals => { :story => story }
  %hr.soften
