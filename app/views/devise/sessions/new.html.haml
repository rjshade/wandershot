.row
  .span6.offset3
    .devise
      .page-header
        %h2 Sign in to #{wandershot_text}
      
      = simple_form_for(@user, :url => session_path(:user)) do |f|
        = f.input :email, :required => false, :autofocus => true 
        = f.input :password, :required => false
      
        .form-actions
          = f.button :submit, "Sign in", :class => 'btn btn-large'
      %hr
      = render "links"
