!!!
%html
  %head
    %title Wandershot
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode/svn/trunk/html5.js"

    = stylesheet_link_tag    "application", :media => "all"
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lato:100,300,400'

    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false"
    = javascript_include_tag "application"

    = csrf_meta_tags

    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

    = render partial: 'shared/google_analytics'
  %body
    = render partial: 'shared/navbar'

    %header
    .container
      #userModal.modal.hide.fade
      =render partial: "shared/flash_messages", locals: {flash: flash}
      = yield
    
