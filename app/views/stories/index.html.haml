.row
  .span12
    .page-header
      %h1 Stories

.row
  - @stories.each do |story|
    .span2
      %ul.thumbnails
        %li.span2
          = link_to (image_tag "posts/morocco_#{[1,2,3].shuffle.first}.jpg"), story, :class=>'thumbnail'
    .span10
      .page-header
        %h2
          = link_to story.title, story
          by
          = link_to story.user.name, story.user
      %p= story.summary

= link_to 'New story', new_story_path, :class => 'btn btn-large btn-primary'
