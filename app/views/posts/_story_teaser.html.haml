.span4
  - if post || placeholder
    .page-header
      - if placeholder
        %h3 Post title
      - else
        = render :partial => 'posts/title', :locals => { :post => post }
    %ul.thumbnails
      %li.span4
        - if placeholder
          = image_tag 'http://placehold.it/360x240&text=post+image', :class => 'thumbnail'
        - else
          = link_to (image_tag post.image_path), '#', :class=>'thumbnail'
    - if placeholder
      Description of your post...
    - else
      = truncate_html((md post.text), :length => 200, :omission => "...<div class='center'>#{link_to 'Read more Â»', story_post_path( @story, post )}</div>".html_safe)
