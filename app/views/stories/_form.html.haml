= render partial: 'shared/markdown_instructions'
= simple_form_for(@story) do |f|
  = f.error_notification
  = f.input :title, :placeholder => 'Cycling across America'

  = f.input :summary, :label => 'Trip Summary', :as => :text, :placeholder => 'Summarise your trip...'

  .form-actions
    = button_tag "save story", :disable_with => "please wait...", :class => 'btn btn-large'
    or
    = link_to 'cancel', :back
