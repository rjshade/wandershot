.row
  .span6.offset3
    .devise
      .page-header
        %h2 Forgot your password?
      
      = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f|
        = f.error_notification
      
        .form-inputs
          = f.input :email, :required => true
      
        .form-actions
          = button_tag "Send me password reset instructions", :disable_with => "please wait...", :class => 'btn'
      
        %hr
        = render "links"
