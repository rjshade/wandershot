- if story
  .story
    .row
      .span8
        =render :partial => 'stories/title', :locals => { :story => story }
        %hr
        = truncate_html( (md story.summary), :length => 200 )
        = link_to 'More Â»', story_path(story)
      .span4
        %ul.thumbnails
          %li.span4
            - if story.posts.size > 0
              = link_to (image_tag story.posts.shuffle.first.image_path ), story, :class=>'thumbnail'
        .center
          %h6 
            length: 
            %strong 42 days
            | posts:
            %strong= story.posts.size
