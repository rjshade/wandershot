.page-header
  %h1 Editing #{@post.title} (from #{@story.title})

.row
  .span6
    = render 'form'
  .span6
    %ul.thumbnails
      %li.span6
        -if @post.image?
          = link_to (image_tag @post.image.url(:large)), '#', :class=>'thumbnail'
    #gmaps-canvas{:style => 'width:100%;height:200px;'}
    #gmaps-error
