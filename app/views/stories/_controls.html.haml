.controls
  - if can? :manage, @story
    = link_to 'Add post', new_story_post_path( @story ),
              :class => 'btn btn-mini',
              :id => 'new-post'
    = link_to 'Edit story', edit_story_path( @story ),
              :class => 'btn btn-mini' 
    = link_to 'Delete', @story,
              :confirm => "This will irrevocably destroy your story and all associated posts!",
              :method => :delete,
              :class => 'btn btn-mini btn-danger'
