%h2 Sign in

= simple_form_for(@user, :url => session_path(:user), :html => {:class => 'form-horizontal' }) do |f|
  = f.input :email
  = f.input :password
  - if devise_mapping.rememberable?
    = f.input :remember_me, :as => :boolean

  .form-actions
    = f.button :submit, "Sign in", :class => 'btn btn-primary'

= render "links"
